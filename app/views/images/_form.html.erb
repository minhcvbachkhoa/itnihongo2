<%= form_for @image do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-image">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.label :address, t("image.address") %>
    <%= f.text_field :address, class: "form-control" %>
    <%= f.label :image, t("image.image") %>
    <%= f.file_field :image, id: "image-file" %>
    <%= f.hidden_field :image_cache %>
    <%= f.label :category_id, t("image.category") %>
    <%= f.select :category_id, @categories.map{|category| 
      [category.name, category.id]}, {}, class: "form-control" %>

    <%= f.label :description, t("image.description") %>
    <%= f.text_area :description, class: "form-control" %>

    <%= f.submit yield(:button_text),
      class: "btn btn-primary btn-create btn-lg" %>
    <%= link_to t("action.cancel"), @image.address ? @image : root_path,
      class: "btn btn-danger btn-cancel btn-lg" %>
  </div>
<% end %>
