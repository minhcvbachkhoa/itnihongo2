    <aside class="col-md-4">
      <section class="user_info">
      </section>
      <section class="image_form">
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "image-feed" %></h3>
    </div>
  </div>
<% else %>
  <div class="center home jumbotron">
    <h1>
      <%= t "hello" %><br>
      <%= t "nice-to" %><br><br>
      <%= link_to t("signup.sign-up"), sign_up_path, class: "btn btn-lg btn-primary" %>
