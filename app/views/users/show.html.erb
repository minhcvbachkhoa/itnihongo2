<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.images.any? %>
      <h3><%= t "image.number-images" %><%= @user.images.count %></h3>
      <ol class="images">
        <%= render @images %>
      </ol>
      <%= will_paginate @images %>
    <% end %>
  </div>
</div>
