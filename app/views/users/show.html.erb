<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <% if @user.current_user? current_user %>
          <span><%= link_to t("user.new-image"), new_image_path %></span>
        <% end %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <% if @user.images.any? %>
      <h3><%= t "image.number-images" %><%= @user.images.count %></h3>
      <ol class="images">
        <%= render @images %>
      </ol>
      <%= will_paginate @images %>
    <% end %>
  </div>
</div>
